<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#030303"
    android:layout_height="match_parent"
    tools:context=".newJobFragment">

    <TextView
        android:id="@+id/jobCreateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Add Job"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <EditText
        android:padding="10dp"
        android:id="@+id/editJobName"
        android:background="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jobCreateHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Job Name"
        android:inputType="text"
        android:textColor="#030303" />

    <EditText
        android:padding="10dp"
        android:background="#fff"
        android:id="@+id/editEstimatedStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editJobName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Estimated Start"
        android:inputType="text"
        android:textAllCaps="false"
        android:textColor="#030303" />

    <EditText
        android:padding="10dp"
        android:background="#fff"
        android:id="@+id/editEstimatedCompletion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editEstimatedStart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Estimated Completion"
        android:inputType="text"
        android:textColor="#030303" />

    <EditText
        android:padding="10dp"
        android:background="#fff"
        android:id="@+id/editJobAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editEstimatedCompletion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="text"
        android:textColor="#030303" />
</RelativeLayout>