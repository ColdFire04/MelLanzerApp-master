<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#030303"
    android:layout_height="match_parent"
    tools:context=".newJobFragment">

    <TextView
        android:id="@+id/jobCreateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Add Job"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editJobName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jobCreateHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Job Name (Key Name)"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#030303" />

    <EditText
        android:id="@+id/editEstimatedStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editJobName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Estimated Start"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="false"
        android:textAllCaps="false"
        android:textColor="#030303" />

    <EditText
        android:id="@+id/editEstimatedCompletion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editEstimatedStart"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="#fff"
        android:ems="10"
        android:hint="Estimated Completion"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#030303" />

    <EditText
        android:padding="10dp"
        android:background="#fff"
        android:id="@+id/editJobAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editEstimatedCompletion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="text"
        android:textColor="#030303" />

    <TextView
        android:id="@+id/uploadFileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editJobAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Upload Job Banner"
        android:textColor="#ffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/chooseFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/uploadFileText"
        android:layout_marginTop="20dp"
        android:text="Choose Image" />

    <Button
        android:id="@+id/finishJobButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:layout_marginBottom="46dp"
        android:text="Done" />

    <ImageView
        android:id="@+id/bannerPreview"
        android:layout_width="411dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="135dp" />
</RelativeLayout>